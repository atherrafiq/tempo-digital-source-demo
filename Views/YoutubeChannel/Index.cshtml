

@model TempoDigitalApex3.Models.YoutubeChannel
@{
    ViewBag.Title = "Youtube Network";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
    <div class="main-panel">
        <div class="main-content">
            <div class="content-wrapper">
                @if (ViewBag.ChannelCount > 0 || ViewBag.UserType== "YoutubeConnect")
                {
                    <center>
                        @using (Html.BeginForm("Create", "YoutubeChannel", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form row">
                                <div class="col-md-12">
                                    <h2 style="padding-top:50px;">High Revenue Share – Up to 95%</h2>
                                    <p>Monetize your YouTube channel with Tempo Digital network.</p>
                                    <div class="col-md-12" style="margin-top:30px; ">
                                        @Html.LabelFor(model => model.ChannelName, new { @class = "control-label" })
                                        @Html.EditorFor(model => model.ChannelName, new { htmlAttributes = new { @class = "form-control", placeholder = "Channel Name" } })
                                        @Html.ValidationMessageFor(model => model.ChannelName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-12" style="margin-top:30px; ">
                                        @Html.LabelFor(model => model.ChannelID)
                                        @Html.EditorFor(model => model.ChannelID, new { htmlAttributes = new { @class = "form-control", placeholder = "UCtMA9BzfE11fpxp1elIjtSw" } })
                                        @Html.ValidationMessageFor(model => model.ChannelID, "", new { @class = "text-danger" })
                                    </div>
                                    @*
                            <div class="col-md-12" style="margin-top:30px; ">
                                <label for="message">Description</label>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                                    *@
                                    <div class="col-md-12">
                                        <button type="submit" value="Create" class="btn btn-danger" style="width:100%;">Connect to TempoDigital Youtube Network</button>
                                    </div>

                                    <div class="col-md-12" style="margin-top:30px; ">
                                        <label for="message">Label Name (Sound Recording)</label>
                                        @Html.EditorFor(model => model.YT_Label_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Optional - Add Your Sound Recording Name/Label" } })
                                        @Html.ValidationMessageFor(model => model.YT_Label_Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-12">
                                        <button type="submit" value="Create" class="btn btn-danger" style="width:100%;">Add Label (Sound Recording)</button>
                                    </div>
                                </div>
                            </div>

                        }
                    </center>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <center>
                                @if (ViewBag.ApprovedChannelsList.Count > 0)
                                {
                                    <h3 style="margin-top:50px;">Approved Channels</h3>
                                    <table style="width:60%; margin-top:10px; margin-bottom:30px;">
                                        <tr>
                                            <th>Channel Name</th>
                                            <th>Channel ID</th>
                                            <th>Description</th>
                                            <th>Label</th>
                                            <th>Status</th>
                                        </tr>
                                        @foreach (var channel in ViewBag.ApprovedChannelsList)
                                        {
                                            if (channel.YT_Label_Name == null)
                                            {
                                                <tr>
                                                    <td><a href="https://www.youtube.com/channel/@channel.ChannelID">@channel.ChannelName</a></td>
                                                    <td>@channel.ChannelID</td>
                                                    <td>@channel.Description</td>
                                                    <td>@channel.YT_Label_Name</td>
                                                    <td>Approved</td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td>@channel.ChannelName</td>
                                                    <td>@channel.ChannelID</td>
                                                    <td>@channel.Description</td>
                                                    <td>@channel.YT_Label_Name</td>
                                                    <td>Approved</td>
                                                </tr>
                                            }
                                        }
                                    </table>
                                }
                            </center>
                        </div>
                    </div>
                }
                else
                {
                    @Html.Partial("_NoChannelPartial")
                }
            </div>

        </div>
    </div>

