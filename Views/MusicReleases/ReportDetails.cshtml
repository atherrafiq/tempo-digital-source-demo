                            <th>Album Name</th>
                            <th>Artist Name</th>
                            <th>Track Name</th>
                            <th>Version</th>
                            <th>Quantity</th>
                            <th>Revenue</th>
                            <th>Share</th>
                        </tr>
                        @{
                            double payable = 0.00;

                        }
                        @foreach (var x in ViewBag.report)
                        {
                            <tr>
                                <td>@x.Month</td>
                                <td>@x.Year</td>
                                <td>@x.LabelName</td>
                                <td>@x.UPC</td>
                                <td>@x.ISRC</td>
                                <td>@x.Album_Title</td>
                                <td>@x.Artist_Name</td>
                                <td>@x.Track_Name</td>
                                <td>@x.Version</td>
                                <td>@x.Total_Plays</td>
                                <td>@Math.Round(x.Total_Revenue, 2)</td>
                                <td>$@Math.Round((x.Total_Revenue / 100) * Int32.Parse(ViewBag.UserShare), 2)</td>
                            </tr>
                            payable = payable + (double)x.Total_Revenue;
                        }
                        <tfoot>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Total</td>
                        <td>$@Math.Round(payable, 2)</td>
                        <td>$@Math.Round((payable / 100) * Int32.Parse(ViewBag.UserShare), 2)</td>
                        </tfoot>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

