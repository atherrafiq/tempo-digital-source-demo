    <link href="~/Content/NewTemplate/css/style.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <style>
        .pointer {
            cursor: pointer;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>

<body>

    <div class="main-panel">
        <div class="main-content">
            <div class="content-wrapper">
                <div class="col-lg-12">
                    <a style="float:right; margin-right:30px;" href="~/Admin/Logout"><button type="button">Logout</button></a>

                </div>

                <div class="col-md-12 alert alert-danger" id="alertDiv" style="font-size:20px; width:100%; display:none;">
                    <center>
                        <strong>Alert..!</strong> <span id="alertText">First Select User form User' Table (By Double Clicking on Row)</span>
                    </center>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <center><h3 style="margin-top:50px;">Approved Releases</h3></center>
                        <br />
                        <center>
                            <div>
                                <table id="usersTable" style="width:60%;  ">
                                    <tr>
                                        <th style="text-align: center;">First Name</th>
                                        <th style="text-align: center;">Last Name</th>
                                        <th style="text-align: center;">Label Name</th>
                                        <th style="text-align: center;">Release Name</th>
                                        <th style="text-align: center;">UPCEAN</th>
                                        <th style="text-align: center;">Date/Time</th>
                                        <th style="text-align: center;">Action</th>
                                    </tr>
                                    @foreach (var res in ViewBag.UserDistributions)
                                    {
                                        <tr class="pointer">
                                            @foreach (var us in ViewBag.Users)
                                            {
                                                if (us.Id == res.UserId)
                                                {
                                                    <td style="text-align: center;">@us.FirstName</td>
                                                    <td style="text-align: center;">@us.LastName</td>
                                                    <td style="text-align: center;">@us.LabelName</td>
                                                }
                                            }
                                            <td style="text-align: center;">@res.ReleaseName</td>
                                            <td style="text-align: center;">@res.UPCEAN</td>
                                            <td style="text-align: center;">@res.Sales_Start_Date@res.MusicReleaseId</td>
                                            <td style="text-align: center;"><a href="@Url.Action("ReleaseDistributed", new { id = res.MusicReleaseId })">Distributed</a></td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </center>
                    </div>
                </div>

            </div>
    </div>

