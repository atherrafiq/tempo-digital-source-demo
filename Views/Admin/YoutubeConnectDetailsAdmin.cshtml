@model TempoDigitalApex3.Models.YoutubeConnect
@{
    ViewBag.Title = "Details - YouTube Connect Requests";
    Layout = "~/Views/Shared/_LayoutPage_Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>

</head>
<body class="vertical-layout vertical-menu 2-columns  navbar-sticky" data-menu="vertical-menu" data-col="2-columns">
    <div class="wrapper">
        <div class="main-panel">
            <div class="main-content">
                <div class="content-wrapper">
                    <div class="row match-height">
                        <div class="col-xl-12 col-lg-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body" style="padding:10px;">
                                        <center><h2 style="margin-top:3%;">Applicant Request Details</h2></center>
                                        <div class="row match-height">
                                            <div class="col-lg-12">
                                                <center>
                                                    <img src="@Model.ImageURL" alt="Avatar" style="border-radius: 50%; margin-top:3%;">
                                                </center>
                                            </div>
                                            <div class="col-lg-12">
                                                <center>
                                                    <label style="margin-top:1%;">@Model.AccountTitle</label>
                                                </center>
                                            </div>
                                        </div>
                                        <div class="row match-height" style="margin: 1%;">

                                            <a href="@Url.Action("ApproveConnect","Admin",new { Id = Model.Id })"><button class="btn btn-success" style="float:left; margin-right: 20px; ">Approve</button></a>
                                            <a href="@Url.Action("RejectConnect","Admin",new { Id = Model.Id })"> <button class="btn btn-danger" style="float:left; margin-right: 1%; ">Reject</button></a>
                                        </div>


                                        <div class="col-lg-12" style="border-color:cadetblue; border-style:solid; border-width:thin;">
                                            <div class="col-lg-12">
                                                <i class="fa fa-youtube-play" style="font-size:48px; color:red; float:left; margin-right:20px"></i>
                                                <label style="font-size:20px; margin-top:1%;">Creater Type Platform(s)</label>
                                            </div>

                                            <div class="col-lg-12" style="margin-bottom:1%;">
                                                <div class="col-lg-2">

                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="row match-height" style="margin-bottom:2%;">
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Subscribers</label>
                                                                <br />
                                                                <label>@Model.SubscribersCount</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Views</label>
                                                                <br />
                                                                <label>@Model.ViewCount</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Video Count</label>
                                                                <br />
                                                                <label>@Model.VideoCount</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Comment Count</label>
                                                                <br />
                                                                <label>@Model.CommentCount</label>
                                                            </center>
                                                        </div>
                                                    </div>

                                                    <div class="row match-height" style="margin-bottom:2%;">
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Application Status</label>
                                                                <br />
                                                                <label>@Model.Status</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Country</label>
                                                                <br />
                                                                <label>@Model.Country</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">State/Province</label>
                                                                <br />
                                                                <label>@Model.State</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Published Time</label>
                                                                <br />
                                                                <label>@Model.PublishedTime</label>
                                                            </center>
                                                        </div>
                                                    </div>

                                                    <div class="row match-height" style="margin-bottom:2%;">
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Current Network</label>
                                                                <br />
                                                                <label>@Model.CurrentNetwork</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Account Status</label>
                                                                <br />
                                                                <label>@Model.AccountStatus</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Community Guidelines Standings</label>
                                                                <br />
                                                                <label>@Model.CommunityGuidelinesGS</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Content Id Claim Standings</label>
                                                                <br />
                                                                <label>@Model.ContentIdClaimsGS</label>
                                                            </center>
                                                        </div>
                                                    </div>

                                                    <div class="row match-height" style="margin-bottom:2%;">
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;">Copyright Strikes Standings</label>
                                                                <br />
                                                                <label>@Model.CopyrightStrikesGS</label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;"></label>
                                                                <br />
                                                                <label></label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;"></label>
                                                                <br />
                                                                <label></label>
                                                            </center>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <center>
                                                                <label style="color:darkgray;"></label>
                                                                <br />
                                                                <label></label>
                                                            </center>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>



                                        <div class="row match-height">



                                            <div class="col-lg-12">

                                                <div class="col-lg-12" style="margin-top:30px;">
                                                    <h3>Details</h3>
                                                </div>

                                                <div class="row match-height">
                                                    <div class="col-lg-4">
                                                        <label>Channel ID: </label>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <a target="_blank" href="https://youtube.com/channel/@Model.ChannelID"> @Model.ChannelID</a>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <label>Email: </label>

                                                        @Model.Email
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
