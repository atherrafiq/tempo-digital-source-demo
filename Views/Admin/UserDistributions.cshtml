    <style>
        .pointer {
            cursor: pointer;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>

<body>

    <div class="main-panel">
        <div class="main-content">
            <div class="content-wrapper">
                <div class="col-lg-12">
                    <a style="float:right; margin-right:30px;" href="~/Admin/Logout"><button type="button">Logout</button></a>
                    <a style="float:right; margin-right:30px;" href="@Url.Action("UserDistributionsApproved")"><button type="button">Approved Releases</button></a>
                </div>

                <div class="col-md-12 alert alert-danger" id="alertDiv" style="font-size:20px; width:100%; display:none;">
                    <center>
                        <strong>Alert..!</strong> <span id="alertText">First Select User form User' Table (By Double Clicking on Row)</span>
                    </center>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <center><h3 style="margin-top:50px;">Distributions Need Approval</h3></center>
                        <br />
                        <center>
                            <div style="overflow-y: scroll; height: 800px; width:80%; ">
                                <table id="usersTable" style="width:80%;  ">
                                    <tr>
                                        <th style="text-align: center;">Release Name</th>
                                        <th style="text-align: center;">UPCEAN</th>
                                        <th style="text-align: center;">Date/Time</th>
                                        <th style="text-align: center;">Payment Status</th>
                                        <th style="text-align: center;">Action</th>
                                    </tr>
                                    @foreach (var res in ViewBag.UserDistributions)
                                    {
                                <tr class="pointer">
                                    <td style="text-align: center;">@res.ReleaseName</td>
                                    <td style="text-align: center;">@res.UPCEAN</td>
                                    <td style="text-align: center;">@res.Sales_Start_Date</td>
                                    <td style="text-align: center;">@res.PaymentStaus</td>
                                    <td style="text-align: center;"><a href="@Url.Action("UserDistributionsSongs", new { id = res.MusicReleaseId })">Get Details</a></td>
                                </tr>
                                    }
                                </table>
                            </div>
                        </center>
                    </div>
                    <div class="col-lg-12">
                        <center>
                            <h3 style="margin-top:50px;">Deleted Music Releases</h3>
                            <table style="width:60%; margin-top:10px; margin-bottom:30px;">
                                <tr>
                                    <th>Name</th>
                                    <th>UPC</th>
                                    <th>Label Name</th>
                                    <th>CopyRight Year</th>
                                    <th>CopyRight Holder</th>
                                    <th>Deletion Time</th>
                                    <th>Action</th>
                                </tr>
                                @foreach (var release in ViewBag.DeleteReleaseList)
                                {
                                    <tr>
                                        <td>@release.ReleaseName</td>
                                        <td>@release.UPCEAN</td>
                                        <td>@release.LabelName</td>
                                        <td>@release.CopyrightYear</td>
                                        <td>@release.CopyryghtHolder</td>
                                        <td>@release.DeletionDate</td>
                                        <td>@Html.ActionLink("Deleted Release All Data", "DeleteRelease", "Admin", new { id = release.MusicReleaseId }, null)</td>
                                    </tr>
                                }
                            </table>
                        </center>
                    </div>
                </div>

            </div>
    </div>

