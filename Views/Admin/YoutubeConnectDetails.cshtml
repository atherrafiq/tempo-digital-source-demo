    @*<link href="~/Content/NewTemplate/css/style.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        i.fa {
            display: inline-block;
            border-radius: 60px;
            box-shadow: 0px 0px 2px #888;
            padding: 0.5em 0.6em;
        }
    </style>
</head>



    <div class="main-panel">
        <div class="main-content">
            <div class="content-wrapper">
                <center><h2 style="margin-top:3%;">Applicant Request Details</h2></center>
                <div class="row">
                    <div class="col-lg-12">
                        <center>
                            <img src="@Model.ImageURL" alt="Avatar" style="border-radius: 50%; margin-top:3%;">
                        </center>
                    </div>
                    <div class="col-lg-12">
                        <center>
                            <label style="margin-top:1%;">@Model.AccountTitle</label>
                        </center>
                    </div>
                </div>
                <div class="row" style="margin: 1%;">
                    <div class="col-lg-2">

                    </div>
                    <div class="col-lg-8">
                        <a href="@Url.Action("RejectConnect","Admin",new { Id = Model.Id })"> <button class="btn btn-danger" style="float:right; margin-left: 1%; ">Reject</button></a>
                        <a href="@Url.Action("ApproveConnect","Admin",new { Id = Model.Id })"><button class="btn btn-success" style="float:right; margin-left: 1%; ">Approve</button></a>
                    </div>
                    <div class="col-lg-2">

                    </div>

                </div>
                <div class="row" style="margin-bottom: 2%;">
                    <div class="col-lg-2">

                    </div>
                    <div class="col-lg-8" style="border-color:cadetblue; border-style:solid; border-width:thin;">
                        <div class="col-lg-12">
                            <label style="font-size:20px; margin-top:1%;">Creater Type Platform(s)</label>
                        </div>

                        <div class="col-lg-12">
                            <hr />
                            <i class="fa fa-youtube-play" style="font-size:48px;color:red; float:left;"></i>
                        </div>
                        <div class="col-lg-12" style="margin-bottom:1%;">
                            <div class="col-lg-2">

                            </div>
                            <div class="col-lg-10">
                                <div class="row" style="margin-bottom:2%;">
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Subscribers</label>
                                            <br />
                                            <label>@Model.SubscribersCount</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Views</label>
                                            <br />
                                            <label>@Model.ViewCount</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Video Count</label>
                                            <br />
                                            <label>@Model.VideoCount</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Comment Count</label>
                                            <br />
                                            <label>@Model.CommentCount</label>
                                        </center>
                                    </div>
                                </div>

                                <div class="row" style="margin-bottom:2%;">
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Application Status</label>
                                            <br />
                                            <label>@Model.Status</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Country</label>
                                            <br />
                                            <label>@Model.Country</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">State/Province</label>
                                            <br />
                                            <label>@Model.State</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Published Time</label>
                                            <br />
                                            <label>@Model.PublishedTime</label>
                                        </center>
                                    </div>
                                </div>

                                <div class="row" style="margin-bottom:2%;">
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Current Network</label>
                                            <br />
                                            <label>@Model.CurrentNetwork</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Account Status</label>
                                            <br />
                                            <label>@Model.AccountStatus</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Community Guidelines Standings</label>
                                            <br />
                                            <label>@Model.CommunityGuidelinesGS</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Content Id Claim Standings</label>
                                            <br />
                                            <label>@Model.ContentIdClaimsGS</label>
                                        </center>
                                    </div>
                                </div>
                                <div class="row" style="margin-bottom:2%;">
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;">Copyright Strikes Standings</label>
                                            <br />
                                            <label>@Model.CopyrightStrikesGS</label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;"></label>
                                            <br />
                                            <label></label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;"></label>
                                            <br />
                                            <label></label>
                                        </center>
                                    </div>
                                    <div class="col-lg-3">
                                        <center>
                                            <label style="color:darkgray;"></label>
                                            <br />
                                            <label></label>
                                        </center>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">

                        <div class="col-lg-12">

                            <div class="col-lg-12" style="margin-bottom:30px;">
                                <h3>Details</h3>
                            </div>

                            <div class="col-lg-12">
                                <div class="col-lg-6">
                                    <div class="col-lg-12">
                                        <div class="col-lg-3">
                                            <label>Channel ID: </label>
                                        </div>
                                        <div class="col-lg-9">
                                            <a target="_blank" href="https://youtube.com/channel/@Model.ChannelID"> @Model.ChannelID</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="col-lg-12">
                                        <div class="col-lg-3">
                                            <label>Email: </label>
                                        </div>
                                        <div class="col-lg-9">
                                            @Model.Email
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="col-lg-2"></div>
                </div>

            </div>
        </div>
    </div>


