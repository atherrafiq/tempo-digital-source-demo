@{
    ViewBag.Title = "YouTube Music Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>

</head>

<body class="vertical-layout vertical-menu 2-columns  navbar-sticky" data-menu="vertical-menu" data-col="2-columns">
    <div class="wrapper">
        <div class="main-panel">
            <div class="main-content">
                <div class="content-wrapper">
                    <div class="row match-height">
                        <div class="col-xl-12 col-lg-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body" style="padding:10px">
                                        <img src="https://tpdigital.blob.core.windows.net/logo/Icons/yt-music.png" alt="" width="150px" style="padding:5px">
                                        <div class="row match-height">
                                            <div class="col-xl-6 col-lg-12">
                                                <select id="" class="form-control">
                                                    <option value="">-Select Release-</option>
                                                    <option value="2019">All releases</option>
                                                    <option value="2019">Release 1</option>
                                                    <option value="2020">Release 2</option>
                                                </select>
                                            </div>
                                            <div class="col-xl-3 col-lg-12">
                                                <select id="yearAll" class="form-control">
                                                    <option value="">-Select Year-</option>
                                                    <option value="2019">2019</option>
                                                    <option value="2020">2020</option>
                                                    <option value="2021">2021</option>
                                                </select>
                                            </div>
                                            <div class="col-xl-3 col-lg-12">
                                                <select id="monthAll" class="form-control">
                                                    <option value="">-Select Month-</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                    <option value="6">6</option>
                                                    <option value="7">7</option>
                                                    <option value="8">8</option>
                                                    <option value="9">9</option>
                                                    <option value="10">10</option>
                                                    <option value="11">11</option>
                                                    <option value="12">12</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row match-height">
                        <div class="col-xl-12 col-lg-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Release Name</th>
                                                    <th>UPC</th>
                                                    <th>Track Name</th>
                                                    <th>ISRC</th>
                                                    <th>Coutry</th>
                                                    <th>Artist</th>
                                                    <th>Composer</th>
                                                    <th>Views</th>
                                                    <th>Revenue</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td id="views">---</td>
                                                    <td id="revenue">---</td>
                                                    <td id="share">---</td>
                                                    <td id="views">---</td>
                                                    <td id="revenue">---</td>
                                                    <td id="share">---</td>
                                                    <td id="views">---</td>
                                                    <td id="revenue">---</td>
                                                    <td id="share">---</td>
                                                </tr>

                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</body>


</html>
